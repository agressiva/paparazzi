      <call fun="nav_line_osam_block_run(3,4,nav_radius,50,50)"/>
      <call fun="nav_line_osam_block_run(5,6,nav_radius,50,50)"/>
      <call fun="nav_line_osam_block_run(7,8,nav_radius,50,50)"/>
      <deroute block="Standby"/>
    </block>
    <block group="Psurvey" name="P-Survey dynamic" strip_button="PSurv1-dinamic">
