<!-- ################################################   LAND   ############################################## -->
    <block group="home" name="Parachute land" strip_button="Parachute land" strip_icon="parachute.png">
      <!--<exception cond="ground_alt + 10 > GetPosAlt()" deroute="flare"/>-->

<!--      <circle radius="nav_radius" wp="PARACHUTE" until="ground_alt + 30 > GetPosAlt() " alt="10"/>
      <attitude roll="0.0" throttle="0.0" until="FALSE" vmode="throttle"/> -->

      <exception cond="And( NavQdrCloseTo(DegOfRad(baseleg_out_qdr) - (nav_radius/ fabs(nav_radius)) *10), (ground_alt + 50 > GetPosAlt()) )" deroute="flare_PC"/>

      <call fun="nav_compute_baseleg(WP_AF, WP_PARACHUTE, WP__BASELEG, nav_radius)"/>
      <circle radius="nav_radius" until="NavCircleCount() > 0.5" wp="_BASELEG"/>
      <circle radius="nav_radius" until="And(NavQdrCloseTo(DegOfRad(baseleg_out_qdr)-(nav_radius/fabs(nav_radius))*10), (ground_alt + 35 > GetPosAlt()) )" wp="_BASELEG" alt="30"/>
    </block>

    <block name="flare_PC">
      <go approaching_time="3" from="AF" hmode="route" wp="PARACHUTE"/>
<!--      <go approaching_time="0" from="AF" hmode="route" throttle="0.0" vmode="throttle" wp="PARACHUTE"/> -->
  <!--    <set value="NavParachuteReleaseHatch()" var="unit"/>
      <attitude roll="0.0" throttle="0.0" until="FALSE" vmode="throttle"/> -->
    </block>

    <block name="Parachute_Release">
      <exception cond="block_time > 2" deroute="Open_Hatch"/>
      <attitude roll="0.0" throttle="0.0" vmode="throttle"/>
    </block>
    <block name="Open_Hatch">
      <set value="NavParachuteReleaseHatch()" var="unit"/>
      <attitude roll="0.0" throttle="0.0" until="FALSE" vmode="throttle"/>
    </block>

    <block name="Close_Hatch">
      <set value="NavParachuteCloseHatch()" var="unit"/>
      <deroute block="Standby"/>
    </block>

    <block group="base_pattern" name="Land Right AF-TD" strip_button="Land right (wp AF-TD)" strip_icon="land-right.png">
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>


    <block group="base_pattern" name="Land Left AF-TD" strip_button="Land left (wp AF-TD)" strip_icon="land-left.png">
      <set value="-DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>
    <block name="land">
      <call fun="nav_compute_baseleg(WP_AF, WP_TD, WP__BASELEG, nav_radius)"/>
      <circle radius="nav_radius" until="NavCircleCount() > 0.5" wp="_BASELEG"/>
      <circle radius="nav_radius" until="And(NavQdrCloseTo(DegOfRad(baseleg_out_qdr)-(nav_radius/fabs(nav_radius))*10), 10 > fabs(GetPosAlt() - WaypointAlt(WP__BASELEG)))" wp="_BASELEG"/>
    </block>
    <block name="final">
      <exception cond="ground_alt + 10 > GetPosAlt()" deroute="flare"/>
      <go from="AF" hmode="route" vmode="glide" wp="TD"/>
    </block>
    <block name="flare">
      <go approaching_time="0" from="AF" hmode="route" throttle="0.0" vmode="throttle" wp="TD"/>
      <attitude roll="0.0" throttle="0.0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Test datalink (go to wp 2)">
      <exception cond="datalink_time > 10" deroute="Standby"/>
      <go from="STDBY" hmode="route" wp="2"/>
      <go from="2" hmode="route" wp="STDBY"/>
    </block>


  </blocks>
</flight_plan>
