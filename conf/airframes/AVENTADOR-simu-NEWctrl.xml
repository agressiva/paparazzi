	<subsystem name="ahrs" type="float_dcm"/>
	<subsystem name="imu" type="pololu">
	 <define name="LSM303_ACC_RATE" value="LSM303_RATE_100"/>  <!--50,100,400,1000 -->
	</subsystem>
        <subsystem name="gps" type="ublox"/>
	<configure name="GPS_BAUD" value="B38400"/>
