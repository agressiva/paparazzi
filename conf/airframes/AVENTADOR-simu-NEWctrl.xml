    <define name="POINT_CAM_ROLL" />
    <define name="USE_I2C0"/>
<!--    <define name="USE_ADC"/>-->
    <define name="USE_ADC_0"/>
 <!--    <define name="USE_AIRSPEED"/>
   <define name="USE_BARO_BMP"/>-->
    <define name="SENSOR_SYNC_SEND"/>
