	<define name="COMMAND_ROLL_TRIM" value="0"/>
	</firmware>

<!-- commands section -->
	<servos>

		<servo name="AILERON_RIGHT" no="9" min="2000" neutral="1500" max="1000"/>
		<servo name="AILERON_LEFT"  no="4" min="1000" neutral="1500" max="2000"/>
		<servo name="FLAP_RIGHT"    no="8" min="1000" neutral="1500" max="2000"/>
		<servo name="FLAP_LEFT"     no="5" min="2000" neutral="1500" max="1000"/>
		<servo name="RUDDER_LEFT"   no="1" min="1000" neutral="1500" max="2000"/>
		<servo name="RUDDER_RIGHT"  no="3" min="2000" neutral="1500" max="1000"/>
    		<servo name="THROTTLE"      no="7" min="1000" neutral="1000" max="2000"/>

	</servos>

	<commands>
		<axis name="THROTTLE"	failsafe_value="0"/>
		<axis name="ROLL"	failsafe_value="0"/>
		<axis name="PITCH"	failsafe_value="0"/>
		<axis name="RUDDER"	failsafe_value="0"/>
		<axis name="FLAP"	failsafe_value="0"/>
	</commands>

	<rc_commands>
		<set command="THROTTLE"	value="@THROTTLE"/>
		<set command="ROLL"	value="@ROLL"/>
		<set command="PITCH"	value="@PITCH"/>
		<set command="RUDDER"	value="@YAW"/>
		<set command="FLAP"	value="@CH8"/>
	</rc_commands>
 
	<auto_rc_commands>
		<set command="FLAP"	value="@CH8"/>
		<set command="RUDDER"	value="@YAW"/>
	</auto_rc_commands>
	
	<ap_only_commands>
	</ap_only_commands>

	<section name="MIXER">
		<define name="FLAP_RATE"	value="0.40"/>
		<define name="ELEVATOR_RATE"	value="0.70"/>
		<define name="RUDDER_RATE"	value="0.30"/>
	</section>

  <command_laws>
    <let var="flap"  value="@FLAP"/>
    <set servo="THROTTLE" value="@THROTTLE"/>
    <set servo="AILERON_LEFT"  value="@ROLL"/>
    <set servo="AILERON_RIGHT" value="-@ROLL"/>
    <set servo="FLAP_LEFT"     value="$flap"/>
    <set servo="FLAP_RIGHT"    value="$flap"/>
    <set servo="RUDDER_LEFT"   value="@RUDDER * RUDDER_RATE + @PITCH * ELEVATOR_RATE"/>
    <set servo="RUDDER_RIGHT"  value="-@RUDDER *RUDDER_RATE + @PITCH * ELEVATOR_RATE"/>
  </command_laws>

  <section name="AUTO1" prefix="AUTO1_">
    <define name="MAX_ROLL" value="45" unit="deg"/>  <!-- 50 -->
    <define name="MAX_PITCH" value="45" unit="deg"/> <!-- 35-->
  </section>

