    <define name="REF_ZETA_Q"   value="0.85"/>
    <define name="REF_MAX_Q"    value="400." unit="deg/s"/>
    <define name="REF_MAX_QDOT" value="RadOfDeg(800.)"/>

    <define name="REF_OMEGA_R"  value="360" unit="deg/s"/>
    <define name="REF_ZETA_R"   value="0.85"/>
    <define name="REF_MAX_R"    value="280." unit="deg/s"/> <!--180 70 -->
    <define name="REF_MAX_RDOT" value="RadOfDeg(420.)"/>

    <!-- feedback -->
