    <define name="REF_ZETA_P"   value="0.85"/> <!--85-->
    <define name="REF_MAX_P"    value="400." unit="deg/s"/> <!--280-->
    <define name="REF_MAX_PDOT" value="RadOfDeg(800.)"/><!--400-->

