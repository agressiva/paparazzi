<!-- 
This is a quadrotor frame equiped with Lisa/M and PWM ESC
Telemetry: Transparent
Radio: FR-Sky CPPM - Turnigy 9x

modifications:
1- PPM_IN on UART1_RX
2- ms5611 connected on i2c2
-->

<airframe name="QUAD">
  <firmware name="rotorcraft">
    <target name="ap" board="lisa_m_1.0">
      <!--definições para usar a lisa_m v1.0 com modificação na ordem das seriais-->
      <configure name="RADIO_CONTROL_SPEKTRUM_PRIMARY_PORT"  value="UART1"/>
      <configure name="GPS_PORT"  value="UART3"/>
      <!--definições para usar a lisa_m v1.0 com MK5611 baro-->
      <configure name="LISA_M_BARO"  value="BARO_MS5611_I2C"/>
      <define name="MS5611_SLAVE_ADDR"  value="0xEC"/>
      <define name="SENSOR_SYNC_SEND"/>

    <define name="FAILSAFE_GROUND_DETECT"/>
    <define name="KILL_ON_GROUND_DETECT" value="TRUE"/>
    <define name="THRESHOLD_GROUND_DETECT"  value="15.0"/>
    <define name="NO_ATTITUDE_RESET_ON_MODE_CHANGE"/>
    <define name="AHRS_GRAVITY_HEURISTIC_FACTOR"  value="30"/>
<define name="USE_ATTITUDE_REF" value="0"/>

      <define name="USE_GPS_ACC4R"/>
      <subsystem name="radio_control" type="ppm">
      <configure name="RADIO_CONTROL_PPM_PIN" value="UART1_RX"/>
      </subsystem>
      <define name="RADIO_KILL_SWITCH" value="RADIO_CH6"/>
      <configure name="AHRS_PROPAGATE_FREQUENCY" value="512"/>
      <define name="USE_INS_NAV_INIT"/>
     <define name="USE_ADC"/>
      <define name="USE_ADC_2"/> <!--SONAR-->
      <configure name="AHRS_ALIGNER_LED" value="3"/>
      <configure name="GPS_LED" value="3"/>
      <configure name="SYS_TIME_LED" value="1"/> 
      <configure name="CAM_SWITCH_LED" value="5"/>
<!--      <define name="USE_MAGNETOMETER" value="FALSE"/> --> <!--desabilita magnetometro-->
      <define name="GUIDANCE_H_USE_REF"/> <!--para navegação com velocidade controlada-->
     <!-- <define name="USE_HFF"/> -->
      <define name="USE_VFF_EXTENDED"/>
      <define name="USE_SONAR"/>
      <define name="INS_SONAR_MAX_RANGE" value="5"/>
     <define name="INS_SONAR_VARIANCE_THRESHOLD" value="0.01"/>
      <define name="SONAR_SCALE" value="0.0166"/>
    </target>

  <target name="nps" board="pc">
    <subsystem name="fdm"           type="jsbsim"/>
    <subsystem name="radio_control" type="ppm"/>
  </target>

    <target name="sim" board="pc">
      <subsystem name="fdm"           type="nps"/>
      <subsystem name="radio_control" type="ppm"/>
      <subsystem name="actuators"     type="mkk"/>
    </target>

    <subsystem name="telemetry"     type="transparent"/>
    <subsystem name="motor_mixing"/>
    <subsystem name="actuators"  type="pwm">
      <define name="SERVO_HZ" value="490"/>
    </subsystem>
    <subsystem name="imu"  type="aspirin_v1.5"/>
<!--    <define name="USE_ASPIRIN_MEDIAN"/> -->
    <define name="ASPIRIN_ACCEL_RATE" value="ADXL345_RATE_50HZ"/>  <!--25,50,100,200,400,800,1600,3200-->
    <define name="ASPIRIN_GYRO_LOWPASS" value="ITG3200_DLPF_188HZ"/>  <!--256,188,98,42,20,10,5 -->
    <define name="ASPIRIN_GYRO_SMPLRT_DIV"  value="1"/>
    <subsystem name="gps"           type="ublox"/>
	<configure name="GPS_BAUD"  value="B38400"/>
        <configure name="GPS_PORT"  value="UART3"/>
    <subsystem name="stabilization" type="int_quat"/>
    <subsystem name="ahrs"          type="int_cmpl_quat"/>
    <subsystem name="ins_extended"/>
<!--    <subsystem name="ins"           type="hff"/>  -->
